}

<div class="page-header header-filter clear-filter purple-filter h-25" data-parallax="true" style="background-image: url('/assets/img/bgg.jpg');">
	<div class="container">
		<div class="row">
			<div class="col-md-8 ml-auto mr-auto">
				<div class="brand">
					<h2>Create</h2>
				</div>
			</div>
		</div>
	</div>
</div>



<div class="section section-basic">
<div class="container">
<h1>Create</h1>

<h4>Group</h4>
<hr />
